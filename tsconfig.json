{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "lib": ["es2016", "dom"],
        "moduleResolution": "node",
        "allowJs": true,            
        "checkJs": false,
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "plugins": [
        { "jsfive": "jsfive" }
    ],
    "exclude": [
        // "src/js/utils/utils_data.js",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts" 
, "jsfive.d.ts"    ],
}